{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"*": [
				"src/*"
			]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types",
			"./src/types"
		],
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"rootDir": "src"
	},
	"include": [
		"src/**/*.ts",
		"src/types/**/*.d.ts"
	]
}